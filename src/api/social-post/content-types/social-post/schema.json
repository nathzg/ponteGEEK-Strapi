{
  "kind": "collectionType",
  "collectionName": "social_posts",
  "info": {
    "singularName": "social-post",
    "pluralName": "social-posts",
    "displayName": "SocialPost"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "url": {
      "type": "string"
    },
    "platform": {
      "type": "enumeration",
      "enum": [
        "Instagram",
        "TikTok",
        "linkedin",
        "YouTube"
      ]
    },
    "media": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "publishedPost": {
      "required": true,
      "type": "datetime"
    }
  }
}
